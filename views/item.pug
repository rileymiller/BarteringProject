extends layout

block content
  div.itemDisplay(class='itemProfile')
    h1 Item: #{item.item.name}
      h4 Price: $#{item.item.price}
      p Date listed: #{item.item.date}
      p Status: #{item.item.status}
      p Description:
      p &nbsp &nbsp &nbsp #{item.item.description}
      p Category: #{item.item.category}
      form(action="", method="#", role="form")
        button.btn.btn-success(type="#") Buy
